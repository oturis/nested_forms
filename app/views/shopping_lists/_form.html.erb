<%= form_with(model: shopping_list, local: true) do |form| %>
  <% if shopping_list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(shopping_list.errors.count, "error") %> prohibited this shopping_list from being saved:</h2>

      <ul>
      <% shopping_list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Shopping_List_name %>
    <%= form.text_field :name %>
  </div>

  <h3>Food Items</h3>
  <%= form.fields_for :food_items do |food_item| %>
    <div class="food_items_fields">
    <div class="field">
        <%= food_item.label :food_item %>
        <%= food_item.text_field :food_item %>
        <%= food_item.check_box :_destroy %>
        <%= food_item.label :_destroy, 'remove' %>
        <%= food_item.label :price%>
        <%= food_item.number_field :price, in: 1.0..20.0, step: 0.1 %>

      <div class="form-actions">
        <%= form.button :submit %>
    </div>
    </div>
  <% end %>

<% end %>
